@page "{id:int}"
@model TiendaVelozWeb.Pages.EditarProductoModel
@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar Producto</h1>

@if (Model.Producto == null)
{
    <p>El producto no existe o no se pudo cargar.</p>
}
else
{
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Producto!.ID_Producto" />
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" asp-for="Producto!.Nombre" required>
        </div>
        <div class="form-group">
            <label for="Descripcion">Descripción</label>
            <input type="text" class="form-control" id="Descripcion" asp-for="Producto!.Descripcion" required>
        </div>
        <div class="form-group">
            <label for="Precio">Precio</label>
            <input type="number" step="0.01" class="form-control" id="Precio" asp-for="Producto!.Precio" required>
        </div>
        <div class="form-group">
            <label for="Categoria">Categoría</label>
            <input type="text" class="form-control" id="Categoria" asp-for="Producto!.Categoria" required>
        </div>
        <div class="form-group">
            <label for="Imagen">Imagen</label>
            <input type="file" class="form-control" id="Imagen" name="Imagen">
        </div>
        <button type="submit" class="btn btn-warning">Guardar Cambios</button>
    </form>
}